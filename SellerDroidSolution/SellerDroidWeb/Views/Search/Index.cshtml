@model List<SellerDroidWeb.Models.Seller_Product>

@{
    ViewBag.Title = "Search Results";
}

<h2>Search Results</h2>

@if (Model.Count > 0)
{
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Product Image</th>
                <th>Product Name</th>
                <th>Supplier</th>
                <th>Avgerage User Rating</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
                {
                <tr>
                    <td>
                        @if (product.Main_Image_Id.HasValue)
                        {
                            <img src='@Url.Action("Get", "SellerFile", new { id = product.Main_Image_Id })' style="max-height: 64px; max-width: 64px;" />
                        }
                    </td>
                    <td><a href="/Product/View/@product.Id"><b>@product.Name</b></a></td>
                    <td><a href="/Supplier/ViewProfile/@product.AspNetUser.Id">@product.AspNetUser.Seller_User_Info.Name</a></td>
                    <td>
                        <input type="number" data-show-clear="false" data-readonly="true" class="rating" value="@product.Average_Rating" data-min="0" data-max="5" data-step="0.5" data-size="xs">
                    </td>
                    <td>
                        @Html.Raw(product.Small_Description)
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
